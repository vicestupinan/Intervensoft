<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR NUEVO USUARIO</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                    <div class="input-group mt-2">
                        <label for="nombre" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="name" id="name" placeholder="Nombre de usuario" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="cedula" class="input-group-text">Cedula</label>
                        <input class="form-control" type="text" name="id" id="id" placeholder="Numero de documento" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="telefono" class="input-group-text">Telefono</label>
                        <input class="form-control" type="number" name="phone" id="phone" placeholder="Numero de telefono" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Crear</button>
                    </div>
                    </form>
                </div> 
            </div>
        </div>
    </div>
</div>