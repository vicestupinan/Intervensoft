<div class="container">
    <div class="row mt-5">
        {{#if usuarios}}    
        <div class="col-md-3">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Cedula</th>
                        <th>Telefono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                        <tr>
                            <td>{{nombre}}</td>
                            <td>{{cedula}}</td>
                            <td>{{telefono}}</td>
                            <td>
                                <div>
                                    <a href="#" class="btn btn-warning">Editar</a>
                                    <a href="#" class="btn btn-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="4">REGISTRO DE USUARIOS</td>
                    </tr>
                </tfoot>
            </table>
        </div>       
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear un usuario</h3>
                </div>
                <div class="card-body">
                    <p>Presiona para crear usuario</p>
                    <a href="/add" class="btn btn-primary">Ir a crear</a>
                </div>
            </div>
        {{/if}}
    </div>
</div>